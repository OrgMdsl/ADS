<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
 
<hibernate-mapping>
    <class name="Business.Entity.Map.Atributo" table="Atributo" schema="dbo" catalog="ProjetoADS5" optimistic-lock="version">
        <id name="id" type="integer">
            <column name="id_atributo" />
            <generator class="identity" />
        </id>
        <many-to-one name="genericoItem" class="Business.Entity.Map.GenericoItem" fetch="select">
            <column name="id_entidade_usual" />
        </many-to-one>
        <property name="descricao" type="string">
            <column name="descricao" />
        </property>
        <property name="dataCadastro" type="timestamp">
            <column name="data_cadastro" length="23" />
        </property>
        <property name="ativo" type="boolean">
            <column name="ativo" not-null="true"/>
        </property>
        <bag name="objetoAtributos" table="Objeto_Atributo" inverse="true" lazy="true" fetch="select">
            <key>
                <column name="id_atributo" />
            </key>
            <one-to-many class="Business.Entity.Map.ObjetoAtributo" />
        </bag>
        <bag name="atributoOpcaos" table="Atributo_Opcao" inverse="true" lazy="true" fetch="select"  cascade="all">
            <key>
                <column name="id_atributo" />
            </key>
            <one-to-many class="Business.Entity.Map.AtributoOpcao" />
        </bag>
    </class>
</hibernate-mapping>
