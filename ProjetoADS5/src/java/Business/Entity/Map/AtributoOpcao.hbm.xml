<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
 
<hibernate-mapping>
    <class name="Business.Entity.Map.AtributoOpcao" table="Atributo_Opcao" schema="dbo" catalog="ProjetoADS5" optimistic-lock="version">
        <id name="id" type="integer">
            <column name="id_atributo_opcao" />
            <generator class="identity" />
        </id>
        <many-to-one name="atributo" class="Business.Entity.Map.Atributo" fetch="select">
            <column name="id_atributo" />
        </many-to-one>
        <property name="opcao" type="string">
            <column name="opcao" />
        </property>
        <property name="dataCadastro" type="timestamp">
            <column name="data_cadastro" length="23" />
        </property>
        <property name="ativo" type="boolean">
            <column name="ativo" not-null="true"/>
        </property>
        <set name="objetoAtributoValors" table="Objeto_Atributo_Valor" inverse="true" lazy="true" fetch="select">
            <key>
                <column name="id_atributo_opcao" />
            </key>
            <one-to-many class="Business.Entity.Map.ObjetoAtributoValor" />
        </set>
    </class>
</hibernate-mapping>
