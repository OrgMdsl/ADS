<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="Business.Entity.Map.Chamado" table="Chamado" schema="dbo" catalog="ProjetoADS5" optimistic-lock="version">
        <id name="idChamado" type="int">
            <column name="id_chamado" />
            <generator class="identity" />
        </id>
        <property name="descricaoSolicitacao" type="string">
            <column name="descricao_solicitacao" />
        </property>
        <property name="descricaoSolucaoFinal" type="string">
            <column name="descricao_solucao_final" />
        </property>
        <property name="tituloSolicitacao" type="string">
            <column name="titulo_solicitacao" length="100" />
        </property>
        <set name="chamadoHistoricos" table="ChamadoHistorico" inverse="true" lazy="true" fetch="select">
            <key>
                <column name="id_chamado" />
            </key>
            <one-to-many class="Business.Entity.Map.ChamadoHistorico" />
        </set>
    </class>
</hibernate-mapping>
