<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="Business.Entity.Map.ChamadoTipoChamado" table="ChamadoTipoChamado" schema="dbo" catalog="ProjetoADS5" optimistic-lock="version">
        <id name="idTipoChamado" type="int">
            <column name="id_tipo_chamado" />
            <generator class="identity" />
        </id>
        <property name="idTipoChamadoPai" type="java.lang.Integer">
            <column name="id_tipo_chamado_pai" />
        </property>
        <property name="descricao" type="string">
            <column name="descricao" length="250" />
        </property>
        <property name="quantidadeHoraSla" type="java.lang.Integer">
            <column name="quantidade_hora_sla" />
        </property>
        <set name="chamadoHistoricos" table="ChamadoHistorico" inverse="true" lazy="true" fetch="select">
            <key>
                <column name="id_tipo_chamado" />
            </key>
            <one-to-many class="Business.Entity.Map.ChamadoHistorico" />
        </set>
    </class>
</hibernate-mapping>
