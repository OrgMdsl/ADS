<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
 
<hibernate-mapping>
    <class name="Business.Entity.Map.Cliente" table="Cliente" schema="dbo" catalog="ProjetoADS5" optimistic-lock="version">
        <id name="id" type="integer">
            <column name="id_cliente" />
            <generator class="foreign">
                <param name="property">pessoaEmpresa</param>
            </generator>
        </id>
        <many-to-one name="genericoItem" class="Business.Entity.Map.GenericoItem" fetch="select">
            <column name="id_tipo_pessoa" />
        </many-to-one>
        <one-to-one name="pessoaEmpresa" class="Business.Entity.Map.PessoaEmpresa" constrained="true"></one-to-one>
        <property name="dataCadastro" type="timestamp">
            <column name="data_cadastro" length="23" />
        </property>
        <property name="ativo" type="boolean">
            <column name="ativo" not-null="true"/>
        </property>
        <bag name="contratos" table="Contrato" inverse="true" lazy="true" fetch="select">
            <key>
                <column name="id_cliente" />
            </key>
            <one-to-many class="Business.Entity.Map.Contrato" />
        </bag>
    </class>
</hibernate-mapping>
