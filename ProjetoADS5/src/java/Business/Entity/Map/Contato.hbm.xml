<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
 
<hibernate-mapping>
    <class name="Business.Entity.Map.Contato" table="Contato" schema="dbo" catalog="ProjetoADS5" optimistic-lock="version">
        <id name="id" type="integer">
            <column name="id_contato" />
            <generator class="identity" />
        </id>
        <property name="nome" type="string">
            <column name="nome" length="50" />
        </property>
        <property name="telefone" type="string">
            <column name="telefone" length="50" />
        </property>
        <property name="email" type="string">
            <column name="email" length="100" />
        </property>
        <property name="dataCadastro" type="timestamp">
            <column name="data_cadastro" length="23" />
        </property>
        <property name="ativo" type="boolean">
            <column name="ativo" not-null="true"/>
        </property>
        <set name="pessoaEmpresaContatos" table="Pessoa_Empresa_Contato" inverse="true" lazy="true" fetch="select">
            <key>
                <column name="id_contato" />
            </key>
            <one-to-many class="Business.Entity.Map.PessoaEmpresaContato" />
        </set>
    </class>
</hibernate-mapping>
