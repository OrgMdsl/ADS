<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
 
<hibernate-mapping>
    <class name="Business.Entity.Map.Contrato" table="Contrato" schema="dbo" catalog="ProjetoADS5" optimistic-lock="version">
        <id name="id" type="integer">
            <column name="id_contrato" />
            <generator class="identity" />
        </id>
        <many-to-one name="cliente" class="Business.Entity.Map.Cliente" fetch="select">
            <column name="id_cliente" />
        </many-to-one>
        <property name="dataCadastro" type="timestamp">
            <column name="data_cadastro" length="23" />
        </property>
        <property name="ativo" type="boolean">
            <column name="ativo" not-null="true"/>
        </property>
        <bag name="contratoMaquinas" table="Contrato_Maquina" inverse="true" lazy="true" fetch="select">
            <key>
                <column name="id_contrato" />
            </key>
            <one-to-many class="Business.Entity.Map.ContratoMaquina" />
        </bag>
    </class>
</hibernate-mapping>
