<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="Business.Entity.Map.CoreGenerico" table="CoreGenerico" schema="dbo" catalog="ProjetoADS5">
        <id name="idGenerico" type="int">
            <column name="id_generico" />
            <generator class="identity" />
        </id>
        <many-to-one name="coreGenericoItem" class="Business.Entity.Map.CoreGenericoItem" fetch="select">
            <column name="id_generico_item_padrao" />
        </many-to-one>
        <property name="nome" type="string">
            <column name="nome" length="50" />
        </property>
        <property name="descricao" type="string">
            <column name="descricao" length="50" />
        </property>
        <set name="coreGenericoItems" table="CoreGenericoItem" inverse="true" lazy="true" fetch="select" cascade="all">
            <key>
                <column name="id_generico" />
            </key>
            <one-to-many class="Business.Entity.Map.CoreGenericoItem" />
        </set>
    </class>
</hibernate-mapping>
