<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="Business.Entity.Map.CoreGenericoItem" table="CoreGenericoItem" schema="dbo" catalog="ProjetoADS5">
        <id name="idGenericoItem" type="int">
            <column name="id_generico_item" />
            <generator class="identity" />
        </id>
        <property name="sigla" type="string">
            <column name="sigla" length="5" />
        </property>
        <property name="descricao" type="string">
            <column name="descricao" length="50" />
        </property>
        <property name="ativo" type="java.lang.Boolean">
            <column name="ativo" />
        </property>     
        <many-to-one name="coreGenerico" class="Business.Entity.Map.CoreGenerico" fetch="select">
            <column name="id_generico" />
        </many-to-one>
    </class>
</hibernate-mapping>
