<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="Business.Entity.Map.Endereco" table="Endereco" schema="dbo" catalog="ProjetoADS5" optimistic-lock="version">
        <id name="idEndereco" type="int">
            <column name="id_endereco" />
            <generator class="identity" />
        </id>
        <property name="cep" type="string">
            <column name="cep" length="10" />
        </property>
        <property name="numero" type="string">
            <column name="numero" length="10" />
        </property>
        <set name="enderecoPessoas" table="EnderecoPessoa" inverse="true" lazy="true" fetch="select">
            <key>
                <column name="id_endereco" />
            </key>
            <one-to-many class="Business.Entity.Map.EnderecoPessoa" />
        </set>
    </class>
</hibernate-mapping>
