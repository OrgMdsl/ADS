<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
 
<hibernate-mapping>
    <class name="Business.Entity.Map.Generico" table="Generico" schema="dbo" catalog="ProjetoADS5" optimistic-lock="version">
        <id name="id" type="integer">
            <column name="id_generico" />
            <generator class="identity" />
        </id>
        <property name="nome" type="string">
            <column name="nome" length="50" />
        </property>
        <property name="descricao" type="string">
            <column name="descricao" length="50" />
        </property>
        <property name="dataCadastro" type="timestamp">
            <column name="data_cadastro" length="23" />
        </property>
        <property name="ativo" type="boolean">
            <column name="ativo" not-null="true"/>
        </property>
        <list name="genericoItems" table="Generico_Item" inverse="true" lazy="true" fetch="select" cascade="all">
            <key>
                <column name="id_generico" />
            </key>
            <list-index></list-index>
            <one-to-many class="Business.Entity.Map.GenericoItem" />
        </list>
    </class>
</hibernate-mapping>
