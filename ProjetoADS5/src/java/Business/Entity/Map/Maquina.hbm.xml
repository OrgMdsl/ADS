<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
 
<hibernate-mapping>
    <class name="Business.Entity.Map.Maquina" table="Maquina" schema="dbo" catalog="ProjetoADS5" optimistic-lock="version">
        <id name="id" type="integer">
            <column name="id_maquina" />
            <generator class="identity" />
        </id>
        <many-to-one name="genericoItemByIdCategoriaMaquina" class="Business.Entity.Map.GenericoItem" fetch="select">
            <column name="id_categoria_maquina" />
        </many-to-one>
        <many-to-one name="genericoItemByIdTipoMaquina" class="Business.Entity.Map.GenericoItem" fetch="select">
            <column name="id_tipo_maquina" />
        </many-to-one>
        <many-to-one name="genericoItemByIdAmbienteFuncionamento" class="Business.Entity.Map.GenericoItem" fetch="select">
            <column name="id_ambiente_funcionamento" />
        </many-to-one>
        <many-to-one name="maquina" class="Business.Entity.Map.Maquina" fetch="select">
            <column name="id_maquina_pai" />
        </many-to-one>
        <property name="descricao" type="string">
            <column name="descricao" length="300" />
        </property>
        <property name="modelo" type="string">
            <column name="modelo" length="300" />
        </property>
        <property name="dataUltimaRevisao" type="date">
            <column name="data_ultima_revisao" length="10" />
        </property>
        <property name="dataCadastro" type="timestamp">
            <column name="data_cadastro" length="23" />
        </property>
        <property name="ativo" type="boolean">
            <column name="ativo" not-null="true"/>
        </property>
        <set name="componenteMaquinas" table="Componente_Maquina" inverse="true" lazy="true" fetch="select">
            <key>
                <column name="id_maquina" />
            </key>
            <one-to-many class="Business.Entity.Map.ComponenteMaquina" />
        </set>
        <set name="contratoMaquinas" table="Contrato_Maquina" inverse="true" lazy="true" fetch="select">
            <key>
                <column name="id_maquina" />
            </key>
            <one-to-many class="Business.Entity.Map.ContratoMaquina" />
        </set>
        <set name="maquinas" table="Maquina" inverse="true" lazy="true" fetch="select">
            <key>
                <column name="id_maquina_pai" />
            </key>
            <one-to-many class="Business.Entity.Map.Maquina" />
        </set>
    </class>
</hibernate-mapping>
