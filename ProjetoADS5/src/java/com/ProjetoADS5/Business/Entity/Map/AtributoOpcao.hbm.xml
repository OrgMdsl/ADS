<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
  <class catalog="ProjetoADS5" name="com.ProjetoADS5.Business.Entity.Map.AtributoOpcao" optimistic-lock="version" schema="dbo" table="Atributo_Opcao">
    <id name="id" type="integer">
      <column name="id_atributo_opcao"/>
      <generator class="identity"/>
    </id>
    <many-to-one class="com.ProjetoADS5.Business.Entity.Map.Atributo" fetch="select" name="atributo">
      <column name="id_atributo"/>
    </many-to-one>
    <property name="opcao" type="string">
      <column name="opcao"/>
    </property>
    <property name="dataCadastro" type="timestamp">
      <column length="23" name="data_cadastro"/>
    </property>
    <property name="ativo" type="boolean">
      <column name="ativo" not-null="true"/>
    </property>
    <bag fetch="select" inverse="true" lazy="true" name="objetoAtributoValors" table="Objeto_Atributo_Valor">
      <key>
        <column name="id_atributo_opcao"/>
      </key>
      <one-to-many class="com.ProjetoADS5.Business.Entity.Map.ObjetoAtributoValor"/>
    </bag>
  </class>
</hibernate-mapping>
