<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
  <class catalog="ProjetoADS5" name="com.ProjetoADS5.Business.Entity.Map.Fabricante" optimistic-lock="version" schema="dbo" table="Fabricante">
    <id name="id" type="integer">
      <column name="id_fabricante"/>
      <generator class="identity"/>
    </id>
    <property name="descricao" type="string">
      <column length="50" name="descricao"/>
    </property>
    <property name="dataCadastro" type="timestamp">
      <column length="23" name="data_cadastro"/>
    </property>
    <property name="ativo" type="boolean">
      <column name="ativo" not-null="true"/>
    </property>
    <bag fetch="select" inverse="true" lazy="true" name="componenteMaquinas" table="Componente_Maquina">
      <key>
        <column name="id_fabricante"/>
      </key>
      <one-to-many class="com.ProjetoADS5.Business.Entity.Map.ComponenteMaquina"/>
    </bag>
  </class>
</hibernate-mapping>
