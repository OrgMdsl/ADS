<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
  <class catalog="ProjetoADS5" name="com.ProjetoADS5.Business.Entity.Map.Maquina" optimistic-lock="version" schema="dbo" table="Maquina">
    <id name="id" type="integer">
      <column name="id_maquina"/>
      <generator class="identity"/>
    </id>
    <many-to-one class="com.ProjetoADS5.Business.Entity.Map.GenericoItem" fetch="select" name="genericoItemByIdCategoriaMaquina">
      <column name="id_categoria_maquina"/>
    </many-to-one>
    <many-to-one class="com.ProjetoADS5.Business.Entity.Map.GenericoItem" fetch="select" name="genericoItemByIdTipoMaquina">
      <column name="id_tipo_maquina"/>
    </many-to-one>
    <many-to-one class="com.ProjetoADS5.Business.Entity.Map.GenericoItem" fetch="select" name="genericoItemByIdAmbienteFuncionamento">
      <column name="id_ambiente_funcionamento"/>
    </many-to-one>
    <many-to-one class="com.ProjetoADS5.Business.Entity.Map.Maquina" fetch="select" name="maquina">
      <column name="id_maquina_pai"/>
    </many-to-one>
    <property name="descricao" type="string">
      <column length="300" name="descricao"/>
    </property>
    <property name="modelo" type="string">
      <column length="300" name="modelo"/>
    </property>
    <property name="dataUltimaRevisao" type="date">
      <column length="10" name="data_ultima_revisao"/>
    </property>
    <property name="dataCadastro" type="timestamp">
      <column length="23" name="data_cadastro"/>
    </property>
    <property name="ativo" type="boolean">
      <column name="ativo" not-null="true"/>
    </property>
    <bag fetch="select" inverse="true" lazy="true" name="componenteMaquinas" table="Componente_Maquina">
      <key>
        <column name="id_maquina"/>
      </key>
      <one-to-many class="com.ProjetoADS5.Business.Entity.Map.ComponenteMaquina"/>
    </bag>
    <bag fetch="select" inverse="true" lazy="true" name="contratoMaquinas" table="Contrato_Maquina">
      <key>
        <column name="id_maquina"/>
      </key>
      <one-to-many class="com.ProjetoADS5.Business.Entity.Map.ContratoMaquina"/>
    </bag>
    <bag fetch="select" inverse="true" lazy="true" name="maquinas" table="Maquina">
      <key>
        <column name="id_maquina_pai"/>
      </key>
      <one-to-many class="com.ProjetoADS5.Business.Entity.Map.Maquina"/>
    </bag>
  </class>
</hibernate-mapping>
