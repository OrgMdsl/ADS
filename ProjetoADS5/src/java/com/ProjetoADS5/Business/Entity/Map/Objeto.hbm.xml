<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
  <class catalog="ProjetoADS5" name="com.ProjetoADS5.Business.Entity.Map.Objeto" optimistic-lock="version" schema="dbo" table="Objeto">
    <id name="id" type="integer">
      <column name="id_objeto"/>
      <generator class="identity"/>
    </id>
    <many-to-one class="com.ProjetoADS5.Business.Entity.Map.GenericoItem" fetch="select" name="tipoObjeto">
      <column name="id_tipo_objeto"/>
    </many-to-one>
    <property name="descricao" type="string">
      <column name="descricao"/>
    </property>
    <property name="dataCadastro" type="timestamp">
      <column length="23" name="data_cadastro"/>
    </property>
    <property name="ativo" type="boolean">
      <column name="ativo" not-null="true"/>
    </property>
    <bag fetch="select" inverse="true" lazy="true" name="objetoAtributos" table="Objeto_Atributo">
      <key>
        <column name="id_objeto"/>
      </key>
      <one-to-many class="com.ProjetoADS5.Business.Entity.Map.ObjetoAtributo"/>
    </bag>
    <bag fetch="select" inverse="true" lazy="true" name="componenteMaquinas" table="Componente_Maquina">
      <key>
        <column name="id_objeto"/>
      </key>
      <one-to-many class="com.ProjetoADS5.Business.Entity.Map.ComponenteMaquina"/>
    </bag>
  </class>
</hibernate-mapping>
