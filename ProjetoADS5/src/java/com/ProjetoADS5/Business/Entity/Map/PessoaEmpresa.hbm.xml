<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
  <class catalog="ProjetoADS5" name="com.ProjetoADS5.Business.Entity.Map.PessoaEmpresa" optimistic-lock="version" schema="dbo" table="Pessoa_Empresa">
    <id name="id" type="integer">
      <column name="id_pessoa_empresa"/>
      <generator class="identity"/>
    </id>
    <property name="nome" type="string">
      <column length="300" name="nome"/>
    </property>
    <property name="cnpj" type="string">
      <column length="50" name="cnpj"/>
    </property>
    <property name="cpf" type="string">
      <column length="50" name="cpf"/>
    </property>
    <property name="dataCadastro" type="timestamp">
      <column length="23" name="data_cadastro"/>
    </property>
    <property name="ativo" type="boolean">
      <column name="ativo" not-null="true"/>
    </property>
    <one-to-one class="com.ProjetoADS5.Business.Entity.Map.Cliente" name="cliente"/>
    <bag fetch="select" inverse="true" lazy="true" name="pessoaEmpresaEnderecos" table="Pessoa_Empresa_Endereco">
      <key>
        <column name="id_pessoa_empresa"/>
      </key>
      <one-to-many class="com.ProjetoADS5.Business.Entity.Map.PessoaEmpresaEndereco"/>
    </bag>
    <bag fetch="select" inverse="true" lazy="true" name="pessoaEmpresaContatos" table="Pessoa_Empresa_Contato">
      <key>
        <column name="id_pessoa_empresa"/>
      </key>
      <one-to-many class="com.ProjetoADS5.Business.Entity.Map.PessoaEmpresaContato"/>
    </bag>
    <one-to-one class="com.ProjetoADS5.Business.Entity.Map.Usuario" name="usuario"/>
  </class>
</hibernate-mapping>
