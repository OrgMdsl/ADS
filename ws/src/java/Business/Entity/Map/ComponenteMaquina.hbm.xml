<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
 
<hibernate-mapping>
    <class name="Business.Entity.Map.ComponenteMaquina" table="Componente_Maquina" schema="dbo" catalog="ProjetoADS5" optimistic-lock="version">
        <id name="id" type="integer">
            <column name="id_componente_maquina" />
            <generator class="identity" />
        </id>
        <many-to-one name="fabricante" class="Business.Entity.Map.Fabricante" fetch="select">
            <column name="id_fabricante" />
        </many-to-one>
        <many-to-one name="genericoItem" class="Business.Entity.Map.GenericoItem" fetch="select">
            <column name="id_tipo_componente" />
        </many-to-one>
        <many-to-one name="maquina" class="Business.Entity.Map.Maquina" fetch="select">
            <column name="id_maquina" />
        </many-to-one>
        <many-to-one name="objeto" class="Business.Entity.Map.Objeto" fetch="select">
            <column name="id_objeto" />
        </many-to-one>
        <property name="dataCadastro" type="timestamp">
            <column name="data_cadastro" length="23" />
        </property>
        <property name="ativo" type="boolean">
            <column name="ativo" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>
